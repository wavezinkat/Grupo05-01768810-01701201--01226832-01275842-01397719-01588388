<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Geral">


    <ImageView
        android:id="@+id/icone_return"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_return"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:fontFamily="@font/inter_regular"
        android:text="Quadro Geral"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <LinearLayout
        android:id="@+id/botoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icone_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_home"/>

        <ImageView
            android:id="@+id/icone_economia"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_economia"/>

        <ImageView
            android:id="@+id/icone_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/icone_geral"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_geral2"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/icone_perfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_perfil"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo">

        <ProgressBar
            android:id="@+id/progressBar_jan"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_fev"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_mar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="130dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_abr"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="120dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_mai"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="170dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_jun"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_jul"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_ago"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="110dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_set"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_out"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_nov"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="105dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_dez"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="15dp"
            android:layout_height="175dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightblue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mes_layout"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_layout"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JAN"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="8dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEV"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="8dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAR"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="8dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABR"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="7dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAI"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="7dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUN"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="7dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUL"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="8dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGO"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="8dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="7dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OUT"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="8dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOV"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="8dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEZ"
            android:textSize="8dp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginRight="8dp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/gasto_mes_atual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gasto do Mês Atual\nR$ 3.600,00"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:elevation="5dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/mes_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gasto_mes_atual">

        <LinearLayout
            android:id="@+id/gasto1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="start"
                android:src="@drawable/ic_carrinho"></ImageView>

            <TextView
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:text="Combustível"
                android:textColor="@color/lightblue"
                android:textSize="18dp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="end"
                android:text="R$ 50"
                android:textColor="@color/black"
                android:textSize="18dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gasto2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="start"
                android:src="@drawable/ic_carrinho"></ImageView>

            <TextView
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:text="Alimentação"
                android:textColor="@color/lightblue"
                android:textSize="18dp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="end"
                android:text="R$ 40"
                android:textColor="@color/black"
                android:textSize="18dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gasto3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:gravity="start"
                android:src="@drawable/ic_carrinho"></ImageView>

            <TextView
                android:layout_width="180dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:text="Cinema"
                android:textColor="@color/lightblue"
                android:textSize="18dp"></TextView>

            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="end"
                android:text="R$ 25"
                android:textColor="@color/black"
                android:textSize="18dp"></TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>